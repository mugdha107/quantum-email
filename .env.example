# KM Simulator
KM_BASE_URL=http://127.0.0.1:5001
KM_CLIENT_ID=Alice
KM_PEER_ID=Bob
KM_DEFAULT_KEY_LENGTH=4096
KM_INTEGRITY_SECRET=change_this_demo_secret

# Email (example for Gmail with app password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_STARTTLS=true

IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USERNAME=your_email@gmail.com
IMAP_PASSWORD=your_app_password
IMAP_USE_SSL=true

# App
LOG_LEVEL=INFO
KEY_CACHE_PATH=.qumail_cache.json
KEY_CACHE_PASSWORD=change_this_cache_password
USE_CACHED_KEYS_WHEN_OFFLINE=true
